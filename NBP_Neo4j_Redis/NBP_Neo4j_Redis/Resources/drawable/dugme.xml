<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_enabled="false" >
    <shape>
      <solid
          android:color="#001133" />
      <stroke
          android:width="1dp"
          android:color="#001133" />
      <corners
          android:radius="3dp" />
      <padding 
          android:left="3dp"
          android:top="3dp"
          android:right="3dp"
          android:bottom="3dp" />
    </shape>
  </item>
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#0050a0" />
      <stroke
          android:width="1dp"
          android:color="#0050a0" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="3dp"
          android:top="3dp"
          android:right="3dp"
          android:bottom="3dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#0044fa"
          android:endColor="#0050a0"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#0050a0" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
</selector>